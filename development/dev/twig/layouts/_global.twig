{# Template for ALL pages #}
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0, user-scalable=no">

	<title>
	  {% if page.title == "Home" %}
	    {{ site.title }} &middot; {{ site.tagline }}
	  {% else %}
	    {{ page.meta_title }} &middot; {{ site.title }}
	  {% endif %}
	</title>

	<!-- favicon -->
	<link rel="shortcut icon" href="{{ site.url }}{{ site.baseurl }}/img/favicon.ico"> <!-- 32px -->
	<link rel="apple-touch-icon" href="{{ site.url }}{{ site.baseurl }}/img/apple-touch-icon.png" sizes="180x180"><!-- 180px -->
	<link rel="mask-icon" href="{{ site.url }}{{ site.baseurl }}/img/website-icon.svg" color="#{{ site.brand_colour }}"> <!-- 256px -->
	<meta name="msapplication-TileColor" content="#{{ site.brand_colour }}">
	<meta name="theme-color" content="#{{ site.brand_colour }}">

	{% include '../includes/template/_meta.twig' %}
	{% include '../includes/template/_imports-head.twig' %}
	
</head>
<body class="{{ page }}">

	<!-- Content -->
	{% block body %}{% endblock %}





	<!-- Footer -->
	{% include '../includes/template/_imports-footer.twig' %}
</body>
</html>

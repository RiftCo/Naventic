<head>
	<meta charset="UTF-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0, user-scalable=no">

	<title>
    {% if page.title == "Home" %}
      {{ site.title }} &middot; {{ site.tagline }}
    {% else %}
      {{ page.meta_title }} &middot; {{ site.title }}
    {% endif %}
	</title>

	<!-- favicon -->
	<link rel="shortcut icon" href="{{ site.url }}{{ site.baseurl }}/img/favicon.ico" async> <!--32px Favicon-->
	<link rel="apple-touch-icon" href="{{ site.url }}{{ site.baseurl }}/img/apple-touch-icon.png" sizes="180x180" async><!-- 180px App Icon -->
	<link rel="mask-icon" href="{{ site.url }}{{ site.baseurl }}/img/website-icon.svg" color="#{{ site.brand_colour }}" async> <!-- 256px Display Icon -->
	<meta name="msapplication-TileColor" content="#{{ site.brand_colour }}">
	<meta name="theme-color" content="#{{ site.brand_colour }}">

	{% include _meta.html %}

	<!-- sources -->
	<link href="{{ site.url }}{{ site.baseurl }}/css/style.css" rel="stylesheet" type="text/css">
	<link href="https://fonts.googleapis.com/css?family=Rubik:400,400i,500,700" rel="stylesheet" async>
	<meta name="robots" content="robots.txt">
	<link href="humans.txt" rel="author">
</head>

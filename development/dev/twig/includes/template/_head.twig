
<meta charset="UTF-8" />
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0, user-scalable=no">

<title>
  {% if page.title == "Home" %}
    {{ site.title }} &middot; {{ site.tagline }}
  {% else %}
    {{ page.meta_title }} &middot; {{ site.title }}
  {% endif %}
</title>

<!-- favicon -->
<link rel="shortcut icon" href="{{ siteUrl }}/img/favicon.ico"> <!-- 32px -->
<link rel="apple-touch-icon" href="{{ siteUrl }}/img/apple-touch-icon.png" sizes="180x180"><!-- 180px -->
<link rel="mask-icon" href="{{ siteUrl }}/img/website-icon.svg" color="#{{ site.brand_colour }}"> <!-- 256px -->
<meta name="msapplication-TileColor" content="#{{ site.brand_colour }}">
<meta name="theme-color" content="#{{ site.brand_colour }}">

<!-- seo-meta-global -->
<meta name="author" content="{{ author }}">
<link rel='me' type='text/html' href='http://twitter.com/{{ twitter_username }}'>
<link rel="canonical" href="{{ url }}{{ baseurl }}">

<!-- seo-meta-global - opengraph -->
<meta property="og:type" content="{{ content_type }}">
<meta property="og:site_name" content="{{ title }}">
<meta property="og:locale" content="en"> <!-- en_US -->
<meta property="article:author" content="{{ author }}">

<!-- seo-meta-global - twitter -->
<meta name="twitter:site" content="{{ twitter_username }}" />
<meta name="twitter:card" content="summary" />

<!-- seo-meta-this-page -->
<meta property="og:title" content="{{ meta_title }}">
<meta name="twitter:title" content="{{ meta_title }}" />

<meta name="description" content="{{ intro }}">
<meta property="og:description" content="{{ intro }}">

<meta property="og:url" content="{{ url }}{{ baseurl }}">
<meta name="twitter:url" content="{{ url }}{{ baseurl }}"/>

<meta property="og:image" content="{{ url }}{{ baseurl }}{{ image }}">
<meta name="twitter:image" content="{{ url }}{{ baseurl }}{{ image }}" />

<meta name="keywords" content="{% for value in tags %}{{ value }}, {% endfor %}">

<!-- global imports -->
<meta name="robots" content="robots.txt">
<link rel="author" href="humans.txt">
<link rel="manifest" href="manifest.json">


